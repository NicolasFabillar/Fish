<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile - Fish Seller</title>
    <!-- bootstrap core css -->
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.css" />
    <!-- fonts style -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans|Poppins:400,700&display=swap" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="/css/style.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="/css/responsive.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #000000;
            background-image: linear-gradient(147deg, #000000 0%, #04619f 74%);
            color: white;
        }

        .container {
            display: flex;
            margin: 0;
        }
        .sidebar {
            width: 250px;
            padding: 20px;
            height: 100vh;
            overflow-y: auto; /* Allow sidebar to scroll */
            position: fixed;
        }
        .back-button {
            display: block;
            margin-bottom: 20px;
            text-decoration: none;
            color: white;
            font-size: 18px;
        }
        .back-button:hover {
            color: #FF8C42;
        }
        .sidebar h2 {
            color: white;
            text-align: center;
            margin-top: 20px;
        }
        .sidebar ul {
            list-style: none;
            padding: 0;
        }
        .sidebar ul li {
            margin: 20px 0;
        }
        .sidebar ul li a {
            color: white;
            text-decoration: none;
            display: block;
            padding: 10px;
            border-radius: 5px;
            transition: background 0.3s;
        }
        .sidebar ul li a.active, .sidebar ul li a:hover {
            background-color: #FF8C42;
        }
        .main-content {
            margin-left: 250px;
            padding-left: 20px;
            width: calc(100% - 300px);
            border-left: 2px solid #FF8C42;
            display: flex;
            flex-wrap: wrap;
            gap: 40px;
            margin-right: 0;
        }
        .main-content h1 {
            color: #fffbfb;
            margin-bottom: 40px;
            width: 100%;
        }
        .form-group {
            margin-bottom: 20px;
            width: 100%; /* Adjust width as needed */
        }
        .form-group label {
            display: block;
            margin-bottom: 5px;
            color: #fff8f8;
        }
        .form-group input[type="text"],
        .form-group input[type="email"],
        .form-group input[type="password"],
        .form-group input[type="file"],
        .form-group select {
            width: 400px; /* Set to 100% for full width */
            padding: 10px;
            margin-top: 5px;
            border: 1px solid #ccc;
            border-radius: 4px;
            display: inline-block; 
            box-sizing: border-box; /* Ensures padding is included in the width */

        }
        .right-column {
            position: absolute;
            margin-left: 40%;
            top: 200px;
            padding: 10px;
            width: 400px;
            display: flex;
            flex-direction: column;
            gap: 20px;
        }


        .store-image {
            display: flex;
            align-items: center;
            margin-top: 10px;
            margin-bottom: 20px; /* Add margin for separation */
            position: relative;
        }
        .store-image img {
            border-radius: 50%;
            width: 100px;
            height: 100px;
            object-fit: cover;
            margin-right: 20px;
        }
        .actions {
            display: flex;
            justify-content: flex-end;
            margin-top: 20px;
            margin-bottom: 20px; /* Add margin for separation */
            width: 100%;
        }
        .actions button {
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-left: 10px;
        }
        .actions .save {
            background-color: #4CAF50;
            color: white;
        }
        .actions .cancel {
            background-color: #f44336;
            color: white;
        }

        /* Eye icon for password visibility toggle */
        .password-toggle {
            position: absolute;
            right: 25px;
            top: 70%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #000000;
        }

        .left-column {
            margin-left: 20px;
        }
    </style>
</head>
<body class="sub_page">
    <div class="hero_area">
        <!-- header section starts -->
        <header class="header_section">
            <div class="container-fluid">
                <nav class="navbar navbar-expand-lg custom_nav-container">
                    <a class="navbar-brand" href="/">
                        <img src="/images/logo1.png" alt="Logo">
                    </a>
                    <div class="" id="">
                        <div class="User_option">
                            <form class="form-inline my-2 mb-3 mb-lg-0">
                                <input type="search" placeholder="Search">
                                <button class="btn my-sm-0 nav_search-btn" type="submit"></button>
                            </form>
                        </div>
                        <div class="custom_menu-btn">
                            <button onclick="openNav()">
                                <span class="s-1"></span>
                                <span class="s-2"></span>
                                <span class="s-3"></span>
                            </button>
                        </div>
                        <div id="myNav" class="overlay">
                            <div class="overlay-content">
                                <a href="/">Home</a>
                                <a href="/about">About</a>
                                <a href="/product_list">Products</a>
                                <a href="/sellers">Sellers</a>
                                <a href="/contact">Contact Us</a>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        </header>
        <!-- end header section -->
    </div>
    <div class="container">
        <div class="sidebar">
            <a href="#" class="back-button" onclick="history.back()">‚Üê Back to Profile</a>
            <ul>
                <li><a href="#" class="active">Edit Profile</a></li>
                <li><a href="/listing_form">Add Fish</a></li>
            </ul>
        </div>
        
        <div class="main-content">
            <h1>Edit Profile</h1>
                <form action="/auth/api/updateProfile" method="POST" enctype="multipart/form-data">
                    <div class="left-column">
                    <input type="text" id="id" name="id" value="<%= userData.id %>" hidden>
                    <% if (userData.isSeller == 1) { %> 
                        <div class="form-group">
                            <label for="storeName">Store Name</label>
                            <input type="text" id="storeName" name="storeName" value="<%= userData.storeName %>">
                        </div>
                        <%} %>
                    <div class="form-group">
                        <label for="sellerName">First Name</label>
                        <input type="text" id="firstName" name="firstName" value="<%= userData.firstName %>">
                    </div>
                    <div class="form-group">
                        <label for="sellerName">Last Name</label>
                        <input type="text" id="lastName" name="lastName" value="<%= userData.lastName %>">
                    </div>
                    <div class="form-group">
                        <label for="location">Location</label>
                        <input type="text" id="location" name="location" value="<%= userData.location %>">
                    </div>
                    <div class="form-group">
                        <label for="contactNumber">Contact Number</label>
                        <input type="text" id="contactNumber" name="contactNumber" value="<%= userData.contact %>">
                    </div>
                </div>
                    <div class="right-column">
                        <div class="store-image">
                            <img src="/profile_uploads/<%= userData.img %>" alt="Store Image" id="storeImagePreview">
                            <input type="file" id="profileImage" name="profileImage" accept="image/*" onchange="previewImage(event)">
                        </div>
                        <div class="form-group">
                            <label for="emailAddress">Email Address</label>
                            <input type="text" id="emailAddress" name="emailAddress" value="<%= userData.email %>" disabled>
                        </div>
                        <!-- <div class="form-group position-relative">
                            <label for="password">Password</label>
                            <input type="password" id="password" name="password">
                            <span class="password-toggle" onclick="togglePasswordVisibility()">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M8 2C4.4 2 1.27 4.54 0 8c1.27 3.46 4.4 6 8 6s6.73-2.54 8-6c-1.27-3.46-4.4-6-8-6zm0 1.6c1.82 0 3.76 1.2 5 3.4-1.24 2.2-3.18 3.4-5 3.4s-3.76-1.2-5-3.4c1.24-2.2 3.18-3.4 5-3.4zm0 1.2c-.83 0-1.5.67-1.5 1.5S7.17 8 8 8s1.5-.67 1.5-1.5S8.83 4.8 8 4.8z"/>
                                    <path d="M8 6c.552 0 1 .448 1 1s-.448 1-1 1-1-.448-1-1 .448-1 1-1z"/>
                                </svg>
                            </span>
                        </div> -->
                        <div class="actions">
                            <button type="submit" class="save">Save Changes</button>
                            <button type="button" class="cancel" onclick="history.back()">Cancel</button>
                        </div>
                    </div>
            </form>
        </div>
    </div>

    <script>
        function previewImage(event) {
            var reader = new FileReader();
            reader.onload = function(){
                var output = document.getElementById('storeImagePreview');
                output.src = reader.result;
            };
            reader.readAsDataURL(event.target.files[0]);
        }

        function togglePasswordVisibility() {
            var passwordField = document.getElementById("password");
            var icon = document.querySelector(".password-toggle svg");

            if (passwordField.type === "password") {
                passwordField.type = "text";
                icon.classList.remove("bi-eye");
                icon.classList.add("bi-eye-slash");
            } else {
                passwordField.type = "password";
                icon.classList.remove("bi-eye-slash");
                icon.classList.add("bi-eye");
            }
        }

        document.getElementById("cancelButton").addEventListener("click", function() {
            window.location.href = "/profilepage";
        });
    </script>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script>
        // Function to toggle the navigation menu
        function openNav() {
            document.getElementById("myNav").classList.toggle("menu_width");
            document.querySelector(".custom_menu-btn").classList.toggle("menu_btn-style");
        }
    </script>
</body>
</html>
