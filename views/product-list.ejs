<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Basic -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <!-- Mobile Metas -->
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <!-- Site Metas -->
  <meta name="keywords" content="" />
  <meta name="description" content="" />
  <meta name="author" content="" />

  <title>Fish Finder</title>

  <!-- bootstrap core css -->
  <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />

  <!-- fonts style -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans|Poppins:400,700&display=swap" rel="stylesheet">
  <!-- Custom styles for this template -->
  <link href="/css/style.css" rel="stylesheet" />
  <!-- responsive style -->
  <link href="/css/responsive.css" rel="stylesheet" />
  <style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #000000;
        background-image: linear-gradient(147deg, #000000 0%, #04619f 74%);
        margin: 0;
        padding: 0;
        color: white;
    }
  
    main {
        padding: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
  
    .card {
        background-color: rgba(255, 255, 255, 0.331);
        color: rgb(255, 255, 255);
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        margin-bottom: 30px;
        text-align: center;
        display: flex;
        flex-direction: column;
        border-radius: 10px;
        height: 300px;
        cursor: pointer;
    }
  
    .card:hover {
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.5);
        transform: scale(1.05);
    }
  
    .card img {
        width: 90%;
        height: 150px;
        border: 2px solid black;
        object-fit: cover;
        margin: 5%;
    }
  
    .card-body {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 10px;
    }
  
    h5.card-title {
        margin-top: 0px;
    }
  
    p.card-text {
        flex-grow: 1;
        overflow: hidden;
        text-overflow: ellipsis;
        margin-bottom: 0;
        font-size: 0.7rem;
    }
  
    h2 {
        text-align: center;
        margin-top: 0px;
        color: white;
    }
  
    .container-fluid, .row {
        padding-left: 0;
        padding-right: 0;
        margin-left: 0;
        margin-right: 0;
    }
  
    .col-md-3 {
        padding-left: 15px;
        padding-right: 15px;
    }

    .profile-container {
      display: flex;
      align-items: center;
      position: relative; /* Necessary for positioning the dropdown */
      margin-top: 20px;
      margin-right: 210px;
      margin-bottom: 40px;
    }

    .profile-link {
      display: inline-block;
      text-decoration: none;
    }

    .profile-icon {
      width: 50px;
      height: 50px;
      border-radius: 50%;
    }

    .dropdown-menu {
      display: none; /* Hide dropdown by default */
      position: absolute; /* Position dropdown menu */
      top: 100%; /* Position below profile icon */
      right: 0; /* Align to right of profile icon */
      background-color: #ffffff; /* Background color of dropdown */
      border: 1px solid #ccc; /* Border for dropdown */
      border-radius: 4px; /* Rounded corners */
      box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); /* Shadow for dropdown */
      z-index: 1000; /* Ensure dropdown is above other elements */
    }

    .dropdown-item {
      display: block;
      padding: 10px 20px; /* Space around text */
      text-decoration: none; /* Remove underline */
      color: #0a2050; /* Text color */
      font-family: "Open Sans", sans-serif; /* Match font */
    }

    .dropdown-item:hover {
      background-color: #f0f0f0; /* Hover background color */
    }

    .add-fish-container {
  position: absolute;
  top: 90px; /* Adjust based on header height */
  left: 20px; /* Adjust based on desired left margin */
  display: flex;
}

.add-fish-btn {
  background-color: #FF8C42;
  color: white;
  border: none;
  padding: 10px 20px;
  border-radius: 5px;
  text-decoration: none;
  font-family: 'Poppins', sans-serif;
}

.add-fish-btn:hover {
  background-color: #035488;
}

  </style>
  
</head>
<body class="sub_page">
  <div class="hero_area">
    <!-- header section starts -->
    <header class="header_section">
      <div class="container-fluid">
        <nav class="navbar navbar-expand-lg custom_nav-container">
          <a class="navbar-brand" href="/">
            <img src="/images/logo.png" alt="Logo">
          </a>
          <div class="" id="">
            <div class="User_option">
              <form class="form-inline my-2 mb-3 mb-lg-0">
                <input type="search" placeholder="Search">
                <button class="btn my-sm-0 nav_search-btn" type="submit"></button>
              </form>
            </div>
            <% if (userData.isSeller == 1) { %> 
              <div class="add-fish-container">
                <a href="/listing_form" class="btn btn-primary add-fish-btn">Add Fish</a>
              </div>
              <%} %>
            <% if (!userData.loginStatus) { %>
              <!-- Button Box -->
             <div class="home-btn">
              <div class="btn-box">
                <a href="/login" class="btn-1">
                  Login
                </a>
                <a href="/signup" class="btn-2">
                  Register
                </a>
              </div>
            </div>
           <!-- ----- -->
          <% } else { %>
            <div class="profile-container">
              <a href="/profilepage?id=<%= userData.userID %>" class="profile-link">
                <img src="/profile_uploads/<%= userData.profileImage %>" alt="Profile Icon" class="profile-icon">
              </a>
              <div class="dropdown-menu">
                <a href="/profilepage?id=<%= userData.userID %>" class="dropdown-item">Profile</a>
                <a href="/logout" class="dropdown-item">Log Out</a>
              </div>
            </div>
          <% } %>
            <div class="custom_menu-btn">
              <button onclick="openNav()">
                <span class="s-1"></span>
                <span class="s-2"></span>
                <span class="s-3"></span>
              </button>
            </div>
            <div id="myNav" class="overlay">
              <div class="overlay-content">
                <a href="/">Home</a>
                <a href="/sellers">Sellers</a>
                <a href="/contact">Contact Us</a>
              </div>
            </div>
          </div>
        </nav>
      </div>
    </header>
    <!-- end header section -->
  </div>

  <main>
    <div class="container-fluid">
      <div class="row justify-content-center">
        <div class="col-md-12">
          <h2>Product List Page</h2>
          <br>
          <div class="row" id="product-list">
            <% allFishListings.fishData.forEach(function(fishData) {%> 
              <div class="col-md-3">
                <a href="/product_info?id=<%= fishData.id %>" class="card-link">
                  <div class="card">
                    <img src="/fish_uploads/<%= fishData.img %>" alt="<%= fishData.img %>">
                    <div class="card-body">
                      <h5 class="card-title"><%= fishData.fish_name %></h5>
                      <p class="card-text"><%= fishData.description %></p>
                    </div>
                  </div>
                </a>
              </div>
              <% }) %>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- info section -->
  <section class="info_section">
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-lg-3">
          <div class="info_contact">
            <h5>CONTACT INFO</h5>
            <div>
              <img src="/images/call.png" alt="" />
              <p>+01 1234567890</p>
            </div>
            <div>
              <img src="/images/mail.png" alt="" />
              <p>fishfinder@gmail.com</p>
            </div>
          </div>
        </div>

        <div class="col-md-6 col-lg-3">
          <div class="info_social">
            <h5>social media</h5>
            <div class="social_container">
              <div>
                <a href="">
                  <img src="/images/fb.png" alt="" />
                </a>
              </div>
              <div>
                <a href="">
                  <img src="/images/twitter.png" alt="" />
                </a>
              </div>
              <div>
                <a href="">
                  <img src="/images/linkedin.png" alt="" />
                </a>
              </div>
              <div>
                <a href="">
                  <img src="/images/instagram.png" alt="" />
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- end info_section -->

