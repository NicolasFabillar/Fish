<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel = "stylesheet" href = "/style.css">
    <title>Document</title>
</head>
<body>
    <nav>
        <h4>MySQL Showcase</h4>
        <ul>
            <li><a href="/home">Home</a></li>
            <li><a href="/profile">Profile</a></li>
            <li><a href="/logout">Logout</a></li>
        </ul> 
    </nav>

    <div class="container mt-5">
        <div class="jumbotron">
            <h1 class="display-4">Employee Records</h1>
            <p class="lead">List of all the employees of the website</p>
            <hr class="my-4">
            <br>

            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">id</th>
                    <th scope="col">Full Name</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Birth Date</th>
                    <th scope="col">Position</th>
                    <th scope="col">Salary</th>
                    <th scope="col">Email</th>
                  </tr>
                </thead>
                <tbody>
                    <% allEmployeeData.employeeData.forEach(function(employeeData) {%>
                        <tr>
                            <th scope="row"><%= employeeData.id %></th>
                            <td><%= employeeData.fullName %></td>
                            <td><%= employeeData.fname %></td>
                            <td><%= employeeData.lname %></td>
                            <td><%= employeeData.bdate %></td>
                            <td><%= employeeData.position %></td>
                            <td>Php <%= employeeData.salary.toLocaleString("en-US"); %></td>
                            <td><%= employeeData.email %></td>
                        </tr>
                    <% }) %>
                </tbody>
              </table>
            
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
</body>
</html>