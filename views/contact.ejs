  <style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #000000;
        background-image: linear-gradient(147deg, #000000 0%, #04619f 74%);
        margin: 0;
        padding: 0;
        color: white;
    }
  
    main {
        padding: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; /* Full height for centering */
    }
  
    .contact-content {
        display: flex;
        flex-direction: row;
        align-items: flex-start;
        max-width: 900px;
        width: 100%;
    }

    .contact-message, .contact-form-container {
        width: 50%;
        padding: 20px;
    }

    .contact-message {
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding-right: 40px;
    }

    .contact-form-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .contact-form-container h2 {
        margin-bottom: 20px;
    }
  
    .contact-form {
        background-color: rgba(255, 255, 255, 0.331);
        color: rgb(255, 255, 255);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    }
  
    .contact-form h3 {
        margin-bottom: 15px;
    }
  
    .contact-form label {
        font-size: 1rem;
    }
  
    .contact-form .form-control {
        background-color: rgba(255, 255, 255, 0.1);
        border: none;
        color: white;
    }
  
    .contact-form .form-control::placeholder {
        color: rgba(255, 255, 255, 0.5);
    }
  
    .contact-form button {
        border-color: 2px solid #000000;
        background-color: #F7931E;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-family: 'Poppins', sans-serif;
    }
  
    .contact-form button:hover {
        background-color: #035488;
    }

    .profile-container {
      display: flex;
      align-items: center;
      position: relative; /* Necessary for positioning the dropdown */
      margin-top: 20px;
      margin-right: 190px;
      margin-bottom: 40px;
    }

    .profile-link {
      display: inline-block;
      text-decoration: none;
    }

    .profile-icon {
      width: 80px;
      height: 80px;
      border-radius: 50%;
    }

    .dropdown-menu {
      display: none; /* Hide dropdown by default */
      position: absolute; /* Position dropdown menu */
      top: 100%; /* Position below profile icon */
      right: 0; /* Align to right of profile icon */
      background-color: #ffffff; /* Background color of dropdown */
      border: 1px solid #ccc; /* Border for dropdown */
      border-radius: 4px; /* Rounded corners */
      box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); /* Shadow for dropdown */
      z-index: 1000; /* Ensure dropdown is above other elements */
    }

    .dropdown-item {
      display: block;
      padding: 10px 20px; /* Space around text */
      text-decoration: none; /* Remove underline */
      color: #0a2050; /* Text color */
      font-family: "Open Sans", sans-serif; /* Match font */
    }

    .dropdown-item:hover {
      background-color: #f0f0f0; /* Hover background color */
    }
  
  </style>
  
</head>
<body class="sub_page">
