<!DOCTYPE html>
<html>

<head>
  <!-- Basic -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <!-- Mobile Metas -->
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <!-- Site Metas -->
  <meta name="keywords" content="" />
  <meta name="description" content="" />
  <meta name="author" content="" />

  <title>Fish Finder</title>

  <!-- bootstrap core css -->
  <link rel="stylesheet" type="text/css" href="css/bootstrap.css" />

  <!-- fonts style -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans|Poppins:400,700&display=swap" rel="stylesheet">
  <!-- Custom styles for this template -->
  <link href="/css/style.css" rel="stylesheet" />
  <!-- responsive style -->
  <link href="/css/responsive.css" rel="stylesheet" />

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #000000;
      background-image: linear-gradient(147deg, #000000 0%, #04619f 74%);
      color: white;
    }

    header {
      text-align: center;
      padding: 15px;
      color: white;
    }

    header h1 {
      margin: 0;
      font-size: 2.5rem;
    }

    main {
      padding: 20px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .seller-info {
      display: flex;
      align-items: center;
      padding: 15px;
      margin: 20px 0;
      width: 100%;
      background-color: rgba(255, 255, 255, 0.15);
    }

    .seller-icon {
      width: 200px;
      height: 200px;
      margin-right: 100px;
      border-radius: 50%;
      object-fit: cover;
    }

    .seller-details {
      flex-grow: 0.5;
      color: white;
    }

    a.back-button {
      display: inline-block;
      padding: 10px 20px;
      background-color: #F7931E;
      color: black;
      text-decoration: none;
      border-radius: 5px;
      margin: 20px;
      border: 1px solid #F7931E;
    }

    a.back-button:hover {
      background-color: transparent;
      color: white;
    }

    .edit-profile-button {
      display: inline-block;
      padding: 10px 20px;
      background-color: #F7931E;
      color: rgb(0, 0, 0);
      text-decoration: none;
      border-radius: 5px;
      margin: 20px;
      border: 1px solid #000000;
    }

    .edit-profile-button:hover {
      background-color: transparent;
      color: #4CAF50;
    }
  </style>
</head>

<body class="sub_page">
  <div class="hero_area">
    <!-- header section starts -->
    <header class="header_section">
      <div class="container-fluid">
        <nav class="navbar navbar-expand-lg custom_nav-container">
          <a class="navbar-brand" href="/">
            <img src="/images/logo1.png" alt="Logo">
          </a>
          <div class="" id="">
            <div class="User_option">
              <form class="form-inline my-2 mb-3 mb-lg-0">
                <input type="search" placeholder="Search">
                <button class="btn my-sm-0 nav_search-btn" type="submit"></button>
              </form>
            </div>
            <% if (!userData.loginStatus) { %>
              <!-- Button Box -->
             <div class="home-btn">
              <div class="btn-box">
                <a href="/login" class="btn-1">
                  Login
                </a>
                <a href="/signup" class="btn-2">
                  Register
                </a>
              </div>
            </div>
           <!-- ----- -->
          <% } else { %>
            <div class="profile-container">
              <a href="/profilepage?id=<%= userData.userID %>" class="profile-link">
                <img src="/profile_uploads/<%= userData.profileImage %>" alt="Profile Icon" class="profile-icon">
              </a>
              <div class="dropdown-menu">
                <a href="/profilepage?id=<%= userData.userID %>" class="dropdown-item">Profile</a>
                <a href="/logout" class="dropdown-item">Log Out</a>
              </div>
            </div>
          <% } %>
            <div class="custom_menu-btn">
              <button onclick="openNav()">
                <span class="s-1"></span>
                <span class="s-2"></span>
                <span class="s-3"></span>
              </button>
            </div>
            <div id="myNav" class="overlay">
              <div class="overlay-content">
                <a href="/">Home</a>
                <a href="/product_list">Products</a>
                <a href="/sellers">Sellers</a>
                <a href="/contact">Contact Us</a>
              </div>
            </div>
          </div>
        </nav>
      </div>
    </header>
    <!-- end header section -->
  </div>

  <!-- seller info section -->
  <section class="seller-info">
    <img src="/profile_uploads/<%= userData.img %>" alt="Seller Icon" class="seller-icon">
    <div class="seller-details">
      <h2>Fish Store</h2>
      <p id="seller-name"><i class="fas fa-store icon"></i><strong>Seller Name:</strong> <%= userData.fullName %></p>
      <p id="store-ratings"><i class="fas fa-star icon"></i><strong>Ratings:</strong> 4.5/5</p>
      <p id="store-location"><i class="fas fa-map-marker-alt icon"></i><strong>Location:</strong> <%= userData.location %></p>
      <p id="store-contact"><i class="fas fa-phone icon"></i><strong>Contact Info:</strong> <%= userData.contact %></p>
      <p id="store-email"><i class="fas fa-envelope icon"></i><strong>Email Address:</strong> <%= userData.email %></p>
      <a href="/edit" class="edit-profile-button">Edit Profile</a>
      <% if (userData.isSeller == 1) { %> 
        <a href="/listing_form" class="edit-profile-button">Add Fish</a>
        <%} %>
    </div>
  </section>
  <!-- end seller info section -->


  <!-- info section -->
  <section class="info_section">
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-lg-3">
          <div class="info_contact">
            <h5>CONTACT INFO</h5>
            <div>
              <img src="/images/call.png" alt="" />
              <p>+01 1234567890</p>
            </div>
            <div>
              <img src="/images/mail.png" alt="" />
              <p>fishfinder@gmail.com</p>
            </div>
          </div>
        </div>

        <div class="col-md-6 col-lg-3">
          <div class="info_social">
            <h5>social media</h5>
            <div class="social_container">
              <div>
                <a href="">
                  <img src="/images/fb.png" alt="" />
                </a>
              </div>
              <div>
                <a href="">
                  <img src="/images/twitter.png" alt="" />
                </a>
              </div>
              <div>
                <a href="">
                  <img src="/images/linkedin.png" alt="" />
                </a>
              </div>
              <div>
                <a href="">
                  <img src="/images/instagram.png" alt="" />
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- end info_section -->

  <!-- footer section -->
  <section class="container-fluid footer_section">
    <p>&copy; 2019 All Rights Reserved. Design by <a href="https://html.design/">Free Html Templates</a></p>
  </section>
  <!-- footer section -->

  <script>
    // Function to toggle the navigation menu
    function openNav() {
      document.getElementById("myNav").classList.toggle("menu_width");
      document.querySelector(".custom_menu-btn").classList.toggle("menu_btn-style");
    }
  </script>
</body>

</html>
