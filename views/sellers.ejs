<!DOCTYPE html>
<html>

<head>
  <!-- Basic -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <!-- Mobile Metas -->
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <!-- Site Metas -->
  <meta name="keywords" content="" />
  <meta name="description" content="" />
  <meta name="author" content="" />

  <title>Fish Finder</title>

  <!-- bootstrap core css -->
  <link rel="stylesheet" type="text/css" href="css/bootstrap.css" />

  <!-- fonts style -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans|Poppins:400,700&display=swap" rel="stylesheet">
  <!-- Custom styles for this template -->
  <link href="/css/style.css" rel="stylesheet" />
  <!-- responsive style -->
  <link href="/css/responsive.css" rel="stylesheet" />
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #000000;
      background-image: linear-gradient(147deg, #000000 0%, #04619f 74%);
      color: white;
    }

    header {
      text-align: center;
      padding: 15px;
      color: white;
    }

    header h1 {
      margin: 0;
      font-size: 2.5rem;
    }

    main {
      padding: 20px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .seller-container {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 20px;
      width: 100%;
      max-width: 1200px;
      margin-bottom: 20px;
    }

    .seller-box {
      background-color: rgba(255, 255, 255, 0.25);
      border-radius: 10px;
      padding: 20px;
      text-align: center;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      cursor: pointer;
      text-decoration: none;
      color: inherit;
    }

    .seller-box:hover {
      transform: scale(1.05);
      background-color: rgba(255, 255, 255, 1);
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    .seller-box:hover .seller-name {
      color: black;
    }

    .seller-image {
      width: 100px;
      height: 100px;
      background-color: #ddd;
      border-radius: 50%;
      margin: 0 auto 10px;
      border: 2px solid black;
      background-size: cover;
      background-position: center;
    }

    .seller-name {
      font-size: 1.2rem;
      color: white;
      margin: 0;
    }

    .profile-container {
      display: flex;
      align-items: center;
      position: relative; /* Necessary for positioning the dropdown */
      margin-top: 20px;
      margin-right: 190px;
      margin-bottom: 40px;
    }

    .profile-link {
      display: inline-block;
      text-decoration: none;
    }

    .profile-icon {
      width: 80px;
      height: 80px;
      border-radius: 50%;
    }

    .dropdown-menu {
      display: none; /* Hide dropdown by default */
      position: absolute; /* Position dropdown menu */
      top: 100%; /* Position below profile icon */
      right: 0; /* Align to right of profile icon */
      background-color: #ffffff; /* Background color of dropdown */
      border: 1px solid #ccc; /* Border for dropdown */
      border-radius: 4px; /* Rounded corners */
      box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); /* Shadow for dropdown */
      z-index: 1000; /* Ensure dropdown is above other elements */
    }

    .dropdown-item {
      display: block;
      padding: 10px 20px; /* Space around text */
      text-decoration: none; /* Remove underline */
      color: #0a2050; /* Text color */
      font-family: "Open Sans", sans-serif; /* Match font */
    }

    .dropdown-item:hover {
      background-color: #f0f0f0; /* Hover background color */
    }
  </style>
</head>

<body class="sub_page">
  <div class="hero_area">
    <header class="header_section">
      <div class="container-fluid">
        <nav class="navbar navbar-expand-lg custom_nav-container">
          <a class="navbar-brand" href="/">
            <img src="/images/logo.png" alt="Logo">
          </a>
          <div class="" id="">
            <div class="User_option">
              <form class="form-inline my-2 mb-3 mb-lg-0">
                <input type="search" placeholder="Search">
                <button class="btn my-sm-0 nav_search-btn" type="submit"></button>
              </form>
            </div>
            <div class="profile-container">
              <a href="/profilepage" class="profile-link">
                <img src="/images/icon2.png" alt="Profile Icon" class="profile-icon">
              </a>
              <div class="dropdown-menu">
                <a href="/profilepage" class="dropdown-item">Profile</a>
                <a href="/logout" class="dropdown-item">Log Out</a>
              </div>
            </div>
            <div class="custom_menu-btn">
              <button onclick="openNav()">
                <span class="s-1"></span>
                <span class="s-2"></span>
                <span class="s-3"></span>
              </button>
            </div>
            <div id="myNav" class="overlay">
              <div class="overlay-content">
                <a href="/">Home</a>
                <a href="/product_list">Products</a>
                <a href="/contact">Contact Us</a>
              </div>
            </div>
          </div>
        </nav>
      </div>
    </header>
  </div>

  <main>
    <h2>Seller List</h2>
    <div class="seller-container" id="sellerContainer">
      <% allSellers.Seller.forEach(function(Seller) {%> 
        <a href="/seller_info?id=<%= Seller.id %>" class="seller-box">
          <div class="seller-image" style="background-image: url('/profile_uploads/<%= Seller.img %>');"></div>
          <p class="seller-name"><%= Seller.fullName %></p>
        </a>
        <% }) %>
    </div>
  </main>

  <!-- info section -->
  <section class="info_section ">
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-lg-3">
          <div class="info_contact">
            <h5>
              CONTACT INFO
            </h5>
            <div>
              <img src="/images/call.png" alt="" />
              <p>
                +01 1234567890
              </p>
            </div>
            <div>
              <img src="/images/mail.png" alt="" />
              <p>
                fishfinder@gmail.com
              </p>
            </div>
          </div>
        </div>

        <div class="col-md-6 col-lg-3">
          <div class="info_social">
            <h5>
              social media
            </h5>
            <div class="social_container">
              <div>
                <a href="">
                  <img src="/images/fb.png" alt="" />
                </a>
              </div>
              <div>
                <a href="">
                  <img src="/images/twitter.png" alt="" />
                </a>
              </div>
              <div>
                <a href="">
                  <img src="/images/linkedin.png" alt="" />
                </a>
              </div>
              <div>
                <a href="">
                  <img src="/images/instagram.png" alt="" />
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- end info_section -->
  <section class="container-fluid footer_section">
    <p>
      &copy; 2019 All Rights Reserved. Design by
      <a href="https://html.design/">Free Html Templates</a>
    </p>
  </section>

  <!-- Scripts -->
  <script type="text/javascript" src="/js/jquery-3.4.1.min.js"></script>
  <script type="text/javascript" src="/js/bootstrap.js"></script>
  <script>
    // Function to toggle the navigation menu
    function openNav() {
      document.getElementById("myNav").classList.toggle("menu_width");
      document.querySelector(".custom_menu-btn").classList.toggle("menu_btn-style");
    }
        // Dropdown menu functionality
        document.addEventListener('DOMContentLoaded', function() {
      var profileLink = document.querySelector('.profile-link');
      var dropdownMenu = document.querySelector('.dropdown-menu');

      profileLink.addEventListener('click', function(event) {
        event.preventDefault(); // Prevent default link behavior
        dropdownMenu.style.display = (dropdownMenu.style.display === 'block') ? 'none' : 'block';
      });

      // Close dropdown when clicking outside
      document.addEventListener('click', function(event) {
        if (!profileLink.contains(event.target) && !dropdownMenu.contains(event.target)) {
          dropdownMenu.style.display = 'none';
        }
      });
    });
  </script>
</body>

</html>
