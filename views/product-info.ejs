    function getFishIdFromURL() {
      const params = new URLSearchParams(window.location.search);
      return params.get('id');
    }

    // Function to find a fish by ID
    function findFishById(id) {
      return fishes.find(fish => fish.id == id);
    }

    // Function to display fish details
    function displayFishDetails(fish) {
      const fishImage = document.getElementById('fish-image');
      const fishName = document.getElementById('fish-name');
      const fishDescription = document.getElementById('fish-description');

      fishImage.src = fish.image;
      fishName.textContent = fish.name;
      fishDescription.textContent = fish.description;
    }

    // On page load, get fish ID from URL, find the fish, and display details
    document.addEventListener('DOMContentLoaded', () => {
      const fishId = getFishIdFromURL();
      const fish = findFishById(fishId);
      if (fish) {
        displayFishDetails(fish);
      } else {
        const productInfoCard = document.getElementById('fish-details');
        productInfoCard.innerHTML = '<p>Fish not found.</p>';
      }
    });
