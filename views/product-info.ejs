  <style>
    body {
        font-family: 'Poppins', sans-serif;
        background-image: linear-gradient(147deg, #000000 0%, #04619f 74%);
        margin: 0;
        padding: 0;
        color: white;
    }

    main {
        padding: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .card {
      background-color: rgba(255, 255, 255, 0.331);
      box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
      transition: 0.3s;
      margin-bottom: 16px;
      text-align: center;
      border-radius: 10px;
      overflow: hidden;
      /* Fixed size for the card container */
      width: 450px;
      height: 480px;
      display: flex;
      position: relative;
    }

    .card img {
      width: 450px;
      height: 400px;
      object-fit: cover; /* This ensures the image covers the area without stretching */
    }


    .card-body {
      padding: 20px;
      position: relative; /* Ensure content remains within the card */
      z-index: 1; /* Ensure content is above the image */
    }


    .card-title {
      margin-top: 10px;
      font-size: 24px;
      color: #fff;
    }

    .card-text {
        margin-bottom: 10px;
        font-size: 16px;
        color: #e3e1e1;
    }

    .back-button, .edit-button {
        font-size: 16px;
        color: white;
        text-decoration: none;
        background-color: #F7931E;
        padding: 10px 20px;
        border-radius: 5px;
        margin-right: 10px;
        margin-top: 10px;
    }

    .back-button:hover, .edit-button:hover {
        background-color: #e67e22;
    }

    h2 {
        text-align: center;
        margin-top: 20px;
        color: white;
    }

    .container-fluid, .row {
        padding-left: 0;
        padding-right: 0;
        margin-left: 0;
        margin-right: 0;
    }

    .info_section {
        margin-top: 20px;
    }

    .card-info {
        text-align: left;
        margin-top: 10px;
    }

    .card-info strong {
        color: #fff;
    }

    .card-header {
      width: 1000px;
      margin-bottom: 20px;
        margin-top: 20px;
        padding: 10px;
        border-bottom: 1px solid #ddd;
        text-align: left;
    }

    .icon {
        width: 20px;
        height: 20px;
        vertical-align: middle;
        margin-right: 8px;
        color: #fff;
    }

    @media (min-width: 768px) {
        .card-wrapper {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .card-wrapper .card {
            flex: 1;
            margin: 10px;
        }

        .card-wrapper .card img {
            width: 100%;
            height: 58%;
        }

        .card-wrapper .card-body {
            text-align: left;
        }
    }

    .btn-primary {
        background-color: #F7931E;
        border-color: #F7931E;
        color: #000000;
    }

    .btn-primary:hover {
        background-color: #e67e22;
        border-color: #e67e22;
    }

    .card-store {
        background-color: rgba(255, 255, 255, 0.331);
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        margin-bottom: 16px;
        margin-top: 10px;
        margin-right: 10px;
        text-align: center;
        border-radius: 10px;
        overflow: hidden;
        padding: 20px;
        height: 480px;
        width: auto;
    }

    .card-store .card-title {
        font-size: 24px;
        color: #fff;
    }

    .card-store-info {
        text-align: left;
        color: #ffffff;
    }

    .icon-circle {
    display: inline-block;
    width: 40px; /* Adjust as needed */
    height: 40px; /* Adjust as needed */
    line-height: 40px;
    text-align: center;
    border-radius: 50%;
    background-color: #F7931E; /* Adjust background color */
    color: #fff; /* Icon color */
    font-size: 24px; /* Adjust icon size */
    margin-right: 10px; /* Space between icon and text */
    margin-bottom: 2px; /* Adjust as needed */
}

    .store-profile-pic {
        display: inline-block;
        width: 100px; /* Adjust size as needed */
        height: 100px; /* Adjust size as needed */
        border-radius: 50%; /* Ensures the image is circular */
        overflow: hidden; /* Ensures the image doesn't overflow the circle */
        margin-bottom: 10px; /* Adjust spacing as needed */
    }

    .store-profile-pic img {
        width: 100%; /* Ensures the image fills the circle */
        height: auto; /* Maintains aspect ratio */
        object-fit: cover; /* Covers the area of the circle */
    }

    .container3 {
      display: flex;
      margin: 0;
    }

    .back-button {
            display: block;
            margin-bottom: 20px;
            text-decoration: none;
            color: white;
            font-size: 18px;
        }
        .back-button:hover {
            color: #FF8C42;
        }


    .card2 {
        background-color: rgba(255, 255, 255, 0.331);
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        margin-top: 26px;
        text-align: center;
        border-radius: 10px;
        overflow: hidden;
    }

    .profile-container {
      display: flex;
      align-items: center;
      position: relative; /* Necessary for positioning the dropdown */
      margin-top: 20px;
      margin-right: 210px;
      margin-bottom: 40px;
    }

    .profile-link {
      display: inline-block;
      text-decoration: none;
    }

    .profile-icon {
      width: 50px;
      height: 50px;
      border-radius: 50%;
    }

    .dropdown-menu {
      display: none; /* Hide dropdown by default */
      position: absolute; /* Position dropdown menu */
      top: 100%; /* Position below profile icon */
      right: 0; /* Align to right of profile icon */
      background-color: #ffffff; /* Background color of dropdown */
      border: 1px solid #ccc; /* Border for dropdown */
      border-radius: 4px; /* Rounded corners */
      box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); /* Shadow for dropdown */
      z-index: 1000; /* Ensure dropdown is above other elements */
    }

    .dropdown-item {
      display: block;
      padding: 10px 20px; /* Space around text */
      text-decoration: none; /* Remove underline */
      color: #0a2050; /* Text color */
      font-family: "Open Sans", sans-serif; /* Match font */
    }

    .dropdown-item:hover {
      background-color: #f0f0f0; /* Hover background color */
    }

    .seller-icon {
      width: 200px;
      height: 200px;
      margin-right: 100px;
      border-radius: 50%;
      object-fit: cover;
    }



  </style>

</head>
