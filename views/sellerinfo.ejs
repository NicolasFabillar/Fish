<!DOCTYPE html>
<html>

<head>
  <!-- Basic -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <!-- Mobile Metas -->
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <!-- Site Metas -->
  <meta name="keywords" content="" />
  <meta name="description" content="" />
  <meta name="author" content="" />

  <title>Fish Finder</title>

  <!-- bootstrap core css -->
  <link rel="stylesheet" type="text/css" href="css/bootstrap.css" />

  <!-- fonts style -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans|Poppins:400,700&display=swap" rel="stylesheet">
  <!-- Custom styles for this template -->
  <link href="/css/style.css" rel="stylesheet" />
  <!-- responsive style -->
  <link href="/css/responsive.css" rel="stylesheet" />

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #000000;
      background-image: linear-gradient(147deg, #000000 0%, #04619f 74%);
      color: white;
    }

    header {
      text-align: center;
      padding: 15px;
      color: white;
    }

    header h1 {
      margin: 0;
      font-size: 2.5rem;
    }

    main {
      padding: 20px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .product-container {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 20px;
      width: 100%;
      max-width: 1200px;
      margin-bottom: 20px;
    }

    .product-box {
      position: relative;
      background-color: rgba(255, 255, 255, 0.2);
      border-radius: 10px;
      padding: 20px;
      text-align: center;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      transition: transform 0.2s, background-color 0.2s, box-shadow 0.2s;
      cursor: pointer;
    }

    .product-box:hover {
      transform: scale(1.05);
      background-color: rgba(255, 255, 255, 1);
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    .product-box:hover .product-name {
      color: black;
    }

    .product-image {
      width: 225px;
      height: 150px;
      background-color: #ddd;
      margin: 0 auto 10px;
      border: 2px solid black;
      background-size: cover;
      background-position: center;
    }

    .product-name {
      font-size: 1.2rem;
      color: white;
      margin: 0;
    }

    .seller-info {
      display: flex;
      align-items: center;
      padding: 15px;
      margin: 20px 0;
      width: 100%;
      background-color: rgba(255, 255, 255, 0.15);
    }

    .seller-icon {
      width: 200px;
      height: 200px;
      margin-right: 100px;
      border-radius: 50%;
      object-fit: cover;
    }

    .seller-details {
      flex-grow: 0.5;
      color: white;
    }

    a.back-button {
      display: inline-block;
      padding: 10px 20px;
      background-color: #F7931E;
      color: black;
      text-decoration: none;
      border-radius: 5px;
      margin: 20px;
      border: 1px solid #F7931E;
    }

    a.back-button:hover {
      background-color: transparent;
      color: white;
    }


    .product-container a {
      text-decoration: none;
      color: inherit;
    }

    .profile-container {
      display: flex;
      align-items: center;
      position: relative; /* Necessary for positioning the dropdown */
      margin-top: 20px;
      margin-right: 190px;
      margin-bottom: 40px;
    }

    .profile-link {
      display: inline-block;
      text-decoration: none;
    }

    .profile-icon {
      width: 80px;
      height: 80px;
      border-radius: 50%;
    }

    .dropdown-menu {
      display: none; /* Hide dropdown by default */
      position: absolute; /* Position dropdown menu */
      top: 100%; /* Position below profile icon */
      right: 0; /* Align to right of profile icon */
      background-color: #ffffff; /* Background color of dropdown */
      border: 1px solid #ccc; /* Border for dropdown */
      border-radius: 4px; /* Rounded corners */
      box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); /* Shadow for dropdown */
      z-index: 1000; /* Ensure dropdown is above other elements */
    }

    .dropdown-item {
      display: block;
      padding: 10px 20px; /* Space around text */
      text-decoration: none; /* Remove underline */
      color: #0a2050; /* Text color */
      font-family: "Open Sans", sans-serif; /* Match font */
    }

    .dropdown-item:hover {
      background-color: #f0f0f0; /* Hover background color */
    }
  </style>
</head>

<body class="sub_page">
  <div class="hero_area">
    <!-- header section starts -->
    <header class="header_section">
      <div class="container-fluid">
        <nav class="navbar navbar-expand-lg custom_nav-container">
          <a class="navbar-brand" href="/">
            <img src="/images/logo1.png" alt="Logo">
          </a>
          <div class="" id="">
            <div class="User_option">
              <form class="form-inline my-2 mb-3 mb-lg-0">
                <input type="search" placeholder="Search">
                <button class="btn my-sm-0 nav_search-btn" type="submit"></button>
              </form>
            </div>
            <div class="profile-container">
              <a href="/profilepage" class="profile-link">
                <img src="/images/icon2.png" alt="Profile Icon" class="profile-icon">
              </a>
              <div class="dropdown-menu">
                <a href="/profilepage" class="dropdown-item">Profile</a>
                <a href="/logout" class="dropdown-item">Log Out</a>
              </div>
            </div>
            <div class="custom_menu-btn">
              <button onclick="openNav()">
                <span class="s-1"></span>
                <span class="s-2"></span>
                <span class="s-3"></span>
              </button>
            </div>
            <div id="myNav" class="overlay">
              <div class="overlay-content">
                <a href="/">Home</a>
                <a href="/product_list">Products</a>
                <a href="/contact">Contact Us</a>
              </div>
            </div>
          </div>
        </nav>
      </div>
    </header>
    <!-- end header section -->
  </div>

  <!-- seller info section -->
  <section class="seller-info">
    <img src="https://via.placeholder.com/100" alt="Seller Icon" class="seller-icon">
    <div class="seller-details">
      <h2><%= sellerData.fullName %></h2>
      <p id="store-name"><i class="fas fa-store icon"></i><strong>Store Name:</strong> Store</p>
      <p id="store-ratings"><i class="fas fa-star icon"></i><strong>Ratings:</strong> 4.5/5</p>
      <p id="store-location"><i class="fas fa-map-marker-alt icon"></i><strong>Location:</strong> <%= sellerData.city %></p>
      <p id="store-contact"><i class="fas fa-phone icon"></i><strong>Contact Info:</strong> <%= sellerData.contact %></p>
      <p id="store-email"><i class="fas fa-envelope icon"></i><strong>Email Address:</strong> <%= sellerData.email %></p>
    </div>
  </section>
  <!-- end seller info section -->

  <!-- back-button -->
  <a href="/sellers" class="back-button">Back to Sellers List</a>

  <!-- product list section -->
  <main>
    <div class="product-container" id="productContainer">
      <!-- Dynamic product boxes -->
      <% allFishListings.fishData.forEach(function(fishData) { %>
      <div class="product-box">
        <a href="/product_info?id=<%= fishData.id %>" class="card-link"></a>
        <div class="product-image" style="background-image: url('/fish_uploads/<%= fishData.img %>');"></div>
        <p class="product-name"><%= fishData.fish_name %></p>
      </div>
      <% }); %>
    </div>
  </main>
  <!-- end product list section -->

  <!-- info section -->
  <section class="info_section ">
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-lg-3">
          <div class="info_contact">
            <h5>
              CONTACT INFO
            </h5>
            <div>
              <img src="/images/call.png" alt="" />
              <p>
                +01 1234567890
              </p>
            </div>
            <div>
              <img src="/images/mail.png" alt="" />
              <p>
                fishfinder@gmail.com
              </p>
            </div>
          </div>
        </div>

        <div class="col-md-6 col-lg-3">
          <div class="info_social">
            <h5>
              social media
            </h5>
            <div class="social_container">
              <div>
                <a href="">
                  <img src="/images/fb.png" alt="" />
                </a>
              </div>
              <div>
                <a href="">
                  <img src="/images/twitter.png" alt="" />
                </a>
              </div>
              <div>
                <a href="">
                  <img src="/images/linkedin.png" alt="" />
                </a>
              </div>
              <div>
                <a href="">
                  <img src="/images/instagram.png" alt="" />
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- end info_section -->

  <!-- footer section -->
  <section class="container-fluid footer_section">
    <p>&copy; 2019 All Rights Reserved. Design by <a href="https://html.design/">Free Html Templates</a></p>
  </section>
  <!-- footer section -->

  <script>
    // JavaScript for product box click
    document.addEventListener('DOMContentLoaded', function () {
      const productBoxes = document.querySelectorAll('.product-box');
      productBoxes.forEach(box => {
        box.addEventListener('click', function () {
          const link = this.querySelector('.card-link');
          if (link) {
            window.location.href = link.href;
          }
        });
      });
    });
  </script>
  <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  <script>
    // Function to toggle the navigation menu
    function openNav() {
      document.getElementById("myNav").classList.toggle("menu_width");
      document.querySelector(".custom_menu-btn").classList.toggle("menu_btn-style");
    }

        // Dropdown menu functionality
        document.addEventListener('DOMContentLoaded', function() {
      var profileLink = document.querySelector('.profile-link');
      var dropdownMenu = document.querySelector('.dropdown-menu');

      profileLink.addEventListener('click', function(event) {
        event.preventDefault(); // Prevent default link behavior
        dropdownMenu.style.display = (dropdownMenu.style.display === 'block') ? 'none' : 'block';
      });

      // Close dropdown when clicking outside
      document.addEventListener('click', function(event) {
        if (!profileLink.contains(event.target) && !dropdownMenu.contains(event.target)) {
          dropdownMenu.style.display = 'none';
        }
      });
    });
  </script>
</body>

</html>
